/* pages/article-detail/article-detail.wxss */

/* 分类具体内容 */
.content{
  justify-content: center;
  margin: auto;
  margin-top: 10rpx;
  margin-bottom: 120rpx;
}

.sort-content-item{
  
  padding-bottom: 20rpx;
  border-bottom: 5rpx rgb(240, 242, 243) solid ;
}

.user-info{
  width: 88%;
  margin: auto;
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 10rpx;
}

.user-photo{
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.user-info image{
  width: 100rpx;
  border-radius: 50%;
}

.user-detail{
  display: flex;
  flex-direction: column;
  flex-grow: 2;
  justify-content: space-between;
  margin-left: 10rpx;
}

.user-name{
  font-weight: 800;
  color: cadetblue;
}

.user-flag{
  display: flex;
  flex-direction: row;
}

.user-flag view{
  font-weight: 100;
  color: white;
  font-size: 20rpx;
  margin-right: 10rpx;
  padding: 5rpx;
  border-radius: 4rpx;
}

.article-sort{
  background-color:rgb(150, 237, 243);
}
.article-location{
  background-color: burlywood;
}

.user-sex{
  background-color: chocolate;
}

.user-level{
  background-color: cornflowerblue;
}

.sort-content-middle{
  width: 88%;
  margin: auto;
  padding: 10rpx;
  text-align: center;
}

.acticle-title{
  word-wrap: break-word;
  font-size: 33rpx;
  display: flex;
  text-align: left;
  overflow: hidden;
  margin-left: 2rpx;
  flex-direction: column;
  letter-spacing: 2rpx;
}

.acticle-text{
  word-wrap: break-word;
  font-size: 28rpx;
  display: flex;
  text-align: left;
  overflow: hidden;
  margin-left: 2rpx;
  flex-direction: column;
  letter-spacing: 2rpx;
}




.acticle-image{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
}

.show-image{
  width: 28vw;
  height: 28vw;
  margin: 7rpx 8rpx 7rpx 2rpx;
}

.show-image image{
  display: inline-block;
  width: 100%;
  height: 100%;
  margin: 5rpx;
  border-radius: 10rpx;
}

/* 更多 */
.post-detail{
  display: block;
  width: 200rpx;
}
.handle{
  padding-left: 170rpx;
}
.handle image{
  
  width: 35rpx;
  height: 35rpx;
  text-align: right;
}
.post-time{
  display: block;
  float: right;
}

.post-time text{
  font-size: 22rpx;
  color: #a09c9c;
}

/* 文章的底部显示 */
.bottom-img{
  width: 35rpx;
  height: 35rpx;
  vertical-align: middle;
}

.sort-content-bottom{
  height: 52rpx;
  width: 90%;
  display: flex;
  align-content: center;
  margin: auto;
  justify-content: flex-end;
}

.collect, .share{
  margin-left: 15rpx;
  line-height: 52rpx;
}

.like{
  line-height: 52rpx;
}


.action-desc{
  padding-left: 6rpx;
  font-size: 25rpx;
}

/* 底部评论 */
.first-tag{
  display: flex;
  
}

.comment-img{
  padding: 20rpx 10rpx 0rpx 10rpx;
  width: 90%;
  margin: auto;
  
}

.comment-img text{
  align-self: center;
}



.comment-img image{
  width: 60rpx;
  height: 40rpx;
  align-self: center;
  
}

.comment-text{
  word-wrap: break-word;
  font-size: 28rpx;
  display: flex;
  text-align: left;
  overflow: hidden;
  margin-left: 10%;
  flex-direction: column;
  letter-spacing: 2rpx;
}


.directing{
  height: 10rpx;
}

.directing image{
  position: relative;
  width: 54rpx;
  height: 40rpx;
  left: 600rpx;
  top: -20rpx;
}



.user-info-mini{
  width: 88%;
  margin: auto;
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 10rpx;
}

.user-photo-mini{
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.user-info-mini image{
  width: 80rpx;
  border-radius: 50%;
}

.user-detail-mini{
  display: flex;
  flex-direction: row;
  flex-grow: 2;
  margin-left: 20rpx; 
}

.user-name-mini{
  font-weight: 800;
  color: cadetblue;
  font-size: 25rpx;
}

.user-flag-mini{
  position: relative;
  margin-left: 20rpx; 
  top: -5rpx;
}

.user-flag-mini view{
  font-weight: 100;
  color: white;
  font-size: 20rpx;
  margin-right: 10rpx;
  padding: 6rpx;
  border-radius: 5rpx;
}

.article-sort-mini{
  background-color: burlywood;
}

.user-sex-mini{
  background-color: chocolate;
}

.user-level-mini{
  background-color: cornflowerblue;
}

/* 更多mini */
.post-detail-mini{
  display: block;
  width: 230rpx;
  padding-right: 8rpx;
}
.handle-mini{
  padding-left: 200rpx;
  
}
.handle-mini image{
  
  width: 35rpx;
  height: 35rpx;
  text-align: right;
}
.post-time-mini{
  display: block;
  float: right;
}

.post-time-mini{
  font-size: 25rpx;
}

/* 下方聊天栏*/
.commentsInputLayout {

  width: 100%;
  
  height: 100rpx;
  
  position: fixed;
  
  bottom: 0rpx;
  
  left: 0rpx;
  
  right: 0rpx;
  
  z-index: 20;
  
  display: -webkit-flex;
  
  display: flex;
  
  flex-direction: row;
  
  align-items: center;
  
  justify-content: center;
  
  background-color: #fff;
  
  /* 使之可以滚动 *//* overflow-y: scroll; *//* 增加该属性，可以增加弹性，是滑动更加顺畅 */
  
  -webkit-overflow-scrolling: touch;
  
  }
  
  /** border-top必须设置，如不设置在部分机型上会出现定位不准问题*/
  .commentsInput {
  
  width: auto;
  
  height: 100rpx;
  
  line-height: 100rpx;
  
  position: relative;
  
  flex: 1;
  
  padding-left: 30rpx;
  
  padding-right: 30rpx;
  
  font-size: 32rpx;
  
  word-break: break-all;
  
  word-wrap: break-word;
  
  color: #333;
  
  border-top: solid #f4f4f4 0.01rpx;
  
  background-color: #f4f4f4;
  
  z-index: 21;
  
  }
  
  /** border-top必须设置，如不设置在部分机型上会出现定位不准问题*/
  
  .commentsBtn {
  
  height: 100rpx;
  
  line-height: 100rpx;
  
  position: relative;
  
  font-size: 32rpx;
  
  color: #fff;
  
  border-top: solid #c7ceda 0.01rpx;
  
  padding-left: 30rpx;
  
  padding-right: 30rpx;
  
  background-color: #6181bd;
  
  z-index: 21;
  
  }


  .commentsBtnlike {
    width: 100rpx; /* 设置容器宽度 */
    height: 100rpx; /* 设置容器高度 */
    display: flex; /* 使用 Flexbox 布局 */
    justify-content: center; /* 水平居中 */
    align-items: center; /* 垂直居中 */
    position: relative;
    background-color: #ffffff; /* 设置容器背景颜色 */
    z-index: 21;
}

.commentsBtnlike .icon {
    width: 80%; /* 图片宽度占满容器 */
    height: 80%; /* 图片高度占满容器 */
    object-fit: contain; /* 图片填充方式，使图片完全填充容器 */
}





