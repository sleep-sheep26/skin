/* pages/serach/search.wxss */

.nav-wrap {
  position: fixed;
  width: 100%;
  top: 0;
  background: #fff;
  color: #000;
  box-shadow: 0px 5px 5px gainsboro; 
}

.nav-title {
  position: absolute;
  text-align: center;
  max-width: 327rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  font-size: 35rpx;
  color: #2c2b2b;
  font-weight: 400;
}

.nav-capsule {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  width: 50rpx;
  justify-content: space-around;
  /* border-radius: 50%; */
  margin-top: 54rpx;
  z-index: 999999999;
}

.back-pre {
  width: 60rpx;
  height: 60rpx;
  margin-top: 11rpx;
  margin-left: 10rpx;
}

.search-page {
  padding: 20rpx;
}
.search-bar {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.search-input {
  flex: 3; /* 设置搜索框的宽度为按钮的两倍 */
  border: 1px solid #ccc;
  border-radius: 5rpx;
  padding: 10rpx;
  margin-right: 10rpx;
}

.search-btn {
  flex: 1; /* 设置按钮的宽度为搜索框的一半 */
  background-color: #007bff98;
  color: #fff;
  border: none;
  border-radius: 5rpx;
  padding: 10rpx 20rpx;
}

.title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.keyword {
  display: inline-block;
  background-color: #f0f0f0;
  color: #333;
  border-radius: 5rpx;
  padding: 5rpx 10rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  font-size: 14px;
  cursor: pointer;
}

