/* pages/search-detail/search-detail.wxss */

.nav-wrap {
  position: fixed;
  width: 100%;
  top: 0;
  background: #fff;
  color: #000;
}

.nav-title {
  position: absolute;
  text-align: center;
  max-width: 100%;
  max-height: 100rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin-top: 40rpx;
  font-size: 35rpx;
  color: #2c2b2b;
  font-weight: 400;
  box-shadow: 0px 5px 5px gainsboro; 
}

.nav-capsule {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  width: 50rpx;
  justify-content: space-around;
  /* border-radius: 50%; */
  margin-top:30rpx;
  z-index: 999999999;
}

.back-pre {
  width: 60rpx;
  height: 60rpx;
  margin-top: 30rpx;
  margin-left: 30rpx;
}

.container {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20px;
}

.disease-image {
  width: 175px;
  height: 200px;
  margin-right: 20px;
  margin-left: 5rpx;
  background-color: #2c2b2b;
}

.disease-info {
  flex: 1;
}

.name {
  color: rgba(0, 53, 167, 0.822);
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 10px;
}
.diseaseinfo {
  flex: 1;
}
.subtitle {
  color: rgba(0, 53, 167, 0.822);
  font-size: 18px;
  font-weight: bold;
  margin-top: 10px;
}

.content {
  font-size: 16px;
  margin-bottom: 20px;
  line-height: 1.5;
}

.fail-text {
  color: rgba(0, 53, 167, 0.822);
  font-size: 18px;
  font-weight: bold;
  margin-top: 200px;
  margin-left: 175px;
}


