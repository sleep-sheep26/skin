/* pages/search-detail/search-detail.wxss */

.nav-wrap {
  position: fixed;
  width: 100%;
  top: 0;
  background: #fff;
  color: #000;
}


.nav-title {
  position: fixed;
  text-align: center;
  max-width: 100%;
  max-height: 150rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin-top: 0rpx;
  font-size: 35rpx;
  color: #2c2b2b;
  font-weight: 400px;
  box-shadow: 0px 5px 5px gainsboro; 
  background-color: #fff;
}

.nav-capsule {
  position: fixed;
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  width: 50rpx;
  justify-content: space-around;
  /* border-radius: 50%; */
  margin-top:30rpx;
  z-index: 999999999;
}

.back-pre {
  position: fixed;
  width: 60rpx;
  height: 60rpx;
  margin-top: 50rpx;
  margin-left: 30rpx;
}

.disease-image {
  width: 100%;
  height: 300rpx;
  margin-bottom: 10rpx;
}


.disease-name {
  color: rgba(0, 53, 167, 0.822);
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 10px;
  text-align: center;
}
.diseaseinfo {
  flex: 1;
  margin-left: 10px;
  margin-right: 10px;
  margin-top: 100px;
}
.subtitle {
  color: rgba(0, 53, 167, 0.822);
  font-size: 18px;
  font-weight: bold;
  margin-top: 10px;
}

.content {
  font-size: 16px;
  margin-bottom: 20px;
  line-height: 1.5;
  text-indent: 2em;
}

.page-buttons{
  display: flex; /* 使用 flex 布局 */
  justify-content: space-between; /* 左右对齐 */
  margin-top: 30rpx;
  margin-left: 20rpx; /* 添加左边距，使按钮不贴边显示 */
}

.fail-message{
  margin-top: 60%;
  font-weight: bold;
  font-size: 25px;
  text-align: center;
  color: rgba(0, 53, 167, 0.822);
}