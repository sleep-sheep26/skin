<!--pages/me/me.wxml-->
<!-- 我的相关内容 -->
<view class="nav-wrap" style="height: {{navH*2+20}}px;">
    <!-- 顶部自定义栏 -->
    <view class="nav-title" style="line-height: {{navH*2+44}}px;">我的</view>
    <view style="display: flex; justify-content: space-around;flex-direction: column;height:100%;">
        <navigator hoverClass="none" url="/pages/serach/search">
            <view class="nav-capsule">
                <view>
                    <image class="back-pre" src="../../assets/images/icon/search.png" style="height:35px;width:35px;"></image>
                </view>
            </view>
        </navigator>
    </view>
</view>

<view class="content" style="margin-top:{{navH*4+10}}rpx">
    <!-- 个人信息 -->
  <view class="top">
    <view class="user-info">
        <view class="user-photo">
            <image src="{{userInfo.avatar}}"></image>
        </view>
        <!-- 用户名、标签 -->
        <view class="user-tag">
            <view class="user-name">
                <text>{{userInfo.nickName}}</text>
            </view>
            <view class="user-flag">
                <view class="identity">医生认证</view>
                <view class="level">Lv20</view>
            </view>
        </view>
        <view class="grow-up">
            <view class="process">
                <image src="../../assets/images/icon/Sign.png"></image>
                <view class="sign">
                    <button size="mini">签到</button>
                </view>
            </view>
            <!-- 等级 -->
            <view class="grades">
                <view class="ginkgo">距离下一等级还需：100</view>
            </view>
        </view>
    </view>
    <!-- 内容分类 -->
    <view  class="user-detail" wx:if="">
        <view class="tpye">
            <view class="type-name">我的帖子</view>
            <view class="type-num">0</view>
        </view>
        <view class="tpye">
            <view class="type-name">我的收藏</view>
            <view class="type-num">0</view>
        </view>
        <view class="tpye">
            <view class="type-name">我的消息</view>
            <view class="type-num">0</view>
        </view>
    </view>
  </view>
<!-- 一些本打算开发的功能 -->
  <view class="bottom">
    <view class="bottom-content">
        <view class="me-about">
            <text>基本信息</text>
            <image src="../../assets/images/common/next.png"></image>
        </view>
        <view class="me-about">
            <text>个人病历</text>
            <image src="../../assets/images/common/next.png"></image>
        </view>
        <view class="me-about">
            <text>烦恼树洞</text>
            <image src="../../assets/images/common/next.png"></image>
        </view>
        <view class="me-about">
            <text>联系我们</text>
            <image src="../../assets/images/common/next.png"></image>
        </view>
        <view class="me-about">
            <text>关于平台</text>
            <image src="../../assets/images/common/next.png"></image>
        </view>
    </view>
  </view>
